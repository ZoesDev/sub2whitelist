doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description' content='')
    meta(name='author' content='')
    title Whitelisting
    // Favicon
    link(rel='icon' type='image/x-icon' href='assets/favicon.ico')
    // Bootstrap icons
    link(href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css' rel='stylesheet' type='text/css')
    // Google fonts
    link(href='https://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic' rel='stylesheet' type='text/css')
    // Core theme CSS (includes Bootstrap)
    link(href='css/styles.css' rel='stylesheet')
  body
    // Navigation
    nav.navbar.navbar-light.bg-light.static-top
      .container
        a.navbar-brand(href='#!')
        if (user)
            a.btn.btn-primary(href='/logout') Logout
    //
    section.features-icons.bg-light.text-center
      .container
        h1 Whitelist Login

        p To Continue please login!

        if (error)
            p An Error Occured: #{error}
        if (auth_error)
            p An Auth Error Occured: #{auth_error}
        if (user)
            p You are now whitelisted on the server
            p Server address is : node2.endofmine.com:25565
            p
                | Modpack information is at
                |
                a(href='https://www.curseforge.com/minecraft/modpacks/end-of-mine-server-pack') End of Mine Server Pack


    // Bootstrap core JS
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')
    // Core theme JS
    script(src='js/scripts.js')
